    string _interactiveColor = "";
    string _interactivesSecondaryColor = "";
    string _interactiveLabel = "Label text";
    Placement _interactiveLabelPlacement = Placement.Bottom;
    SpinType _interactiveType = SpinType.Ring;
    Size _interactiveSize = Size.Small;
    bool _interactiveVisibility = true;
    string _toggleLabel => _interactiveVisibility ? "(visible)" : "(hidden)";

    private void ToggleSpinnerVisibility()
    {
        this._spinnerVisible = !this._spinnerVisible;
    }
}
